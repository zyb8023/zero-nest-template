# ====================================
# 应用配置
# ====================================
NODE_ENV=development
PORT=3000

# ====================================
# 数据库配置
# ====================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_DATABASE=your_database_name
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ====================================
# Redis 配置
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# CORS 配置
# ====================================
# 多个域名用逗号分隔，或使用 * 允许所有域名
# 生产环境建议使用具体域名
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ====================================
# JWT 配置（可选）
# ====================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# ====================================
# 日志配置
# ====================================
# 日志级别: trace, debug, info, warn, error, fatal
LOG_CONSOLE_LEVEL=debug
LOG_FILE_LEVEL=info

# ====================================
# 限流配置
# ====================================
# 请求限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ====================================
# Swagger 配置
# ====================================
# Swagger API 文档标题
SWAGGER_TITLE=NestJS API
# Swagger API 文档描述
SWAGGER_DESCRIPTION=API 文档
# Swagger 版本
SWAGGER_VERSION=1.0

# ====================================
# 健康检查配置
# ====================================
# 健康检查端点路径
HEALTH_CHECK_PATH=/health
